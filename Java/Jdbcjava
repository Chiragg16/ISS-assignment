package com.demo;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;

public class Jdbc {

	public static void main(String[] args) {

		try {
			Class.forName("com.mysql.cj.jdbc.Driver");

			Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/jdbcprac", "root", "12345");

			PreparedStatement ps = con.prepareStatement("insert into employees(fname, lname, domain , stipend) values(?,?,?,?)");

			ps.setString(1, "Chirag");
			ps.setString(2, "Girdhar");
            ps.setString(2, "Dev");
			ps.setInt(3, 2500);

			int count = ps.executeUpdate();

			if (count > 0) {
				System.out.println("succesfully inserted");
			} else {
				System.out.println("unsuccesfull");
			}
		} catch (Exception e) {
			System.out.println("exception" + e.getMessage());
		}
	}

}
